<h1>Edit Item</h1>
<%= form_with model: [@merchant, @item], local: true, data: {turbo: false} do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :description %>
  <%= f.text_field :description %></p>

  <p><%= f.label :unit_price %>
  <%= f.text_field :unit_price %></p>

  <p><%= f.submit "Update Item" %></p>
<% end %>