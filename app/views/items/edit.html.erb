<h1>Edit Item</h1>
<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, local: true do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :description %>
  <%= f.text_field :description %></p>

  <p><%= f.label :unit_price %>
  <%= f.text_field :unit_price %></p>

  <p><%= f.submit "Update Item" %></p>
<% end %>